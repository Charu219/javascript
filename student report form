    }

    input, select, button {
      width: 90%;
      padding: 8px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
 }

 input[type="radio"] {
  width: auto;
  margin-right: 8px;
}
    button {
      background-color: #00b300;
      color: white;
      border: none;
      margin-top: 15px;
      cursor: pointer;
    }

    button:hover {
